<p id="notice"><%= notice %></p>

<div class="row mt-1">
    <div class="col-xs-12 text-xs-center">
        <h1 class="display-3">Events Catalog</h1>
        <hr />
    </div>
</div>
<div class="row my-2">
    <div class="container">
        <div class="col-xs-4">
            <label for="type">Filter By Event Type</label>
            <select class="form-control" name="type">
                <option>All</option>
                <option>Test</option>
            </select>
        </div>
        <div class="col-xs-4">
            <label for="company">Filter A Organization</label>
            <select class="form-control" name="company">
                <option>All</option>
                <option>Test</option>
            </select>
        </div>
        <div class="col-xs-4">
            <label for="sortby">Sort By</label>
            <select class="form-control" name="sortby">
                <option>All</option>
                <option>Test</option>
            </select>
        </div>
    </div>
</div>
<div class="row">
    <% @events.each do |event| %>
    <div class="col-md-4" ng-repeat="event in events">
        <div class='card item-square'>
        <div class="card-block">
            <h6> <%= event.name %></h6>
            <p><%= event.venue_name %> <br /> <%= event.date.strftime("%A, %B %d %Y") %></p>
            <!--<p><#%= event.organization.name %></p>-->
            <%= link_to "View Event", event_path(event), class: "btn btn-square btn-primary" %>
            <%= link_to "Contribute", new_event_contribution_path(event), class: "btn btn-square btn-warning" %>
           
        </div>
        <div class="card-footer text-muted">
            <!--<div class='col-xs-4'><p class='text-xs-left mb-0'><i class='fa fa-user'></i> <#%= event.attendees.count %></p></div> -->
            <!--<div class='col-xs-4'><p class='text-xs-center mb-0'><i class='fa fa-group'></i> <#%= event.teams.count %></p></div>             -->
            <div class='col-xs-4 pl-0'><p class='text-xs-center mb-0'><i class='fa fa-usd'></i> <%= number_to_currency(event.raised) %></p></div>
        </div>
        </div>
    </div>
    <% end %>
</div>
